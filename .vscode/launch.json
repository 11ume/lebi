{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node Inspector",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/dev/serve.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "protocol": "inspector",
            "env": {
                "NODE_PATH": "./src"
            }
        }
    ]
}