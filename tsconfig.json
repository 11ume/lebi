{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "incremental": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": "packages",
    "paths": {
      "wezi-composer": [
        "packages/composer"
      ],
      "wezi-cors": [
        "packages/cors"
      ],
      "wezi-error": [
        "packages/error"
      ],
      "wezi-receive": [
        "packages/receive"
      ],
      "wezi-router": [
        "packages/router"
      ],
      "wezi-send": [
        "packages/send"
      ],
      "wezi-types": [
        "packages/types"
      ],
      "wezi": [
        "packages/wezi"
      ]
    }
  },
  "exclude": [
    "test",
    "node_modules"
  ]
}