{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "declaration": false,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "exclude": [
        "dev",
        "test",
        "dist",
        "build",
        "node_modules",
    ]
}